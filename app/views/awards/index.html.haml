%section.py-5
  .container
    .d-flex.justify-content-between
      %h3.font-weight-bold= t('title.award')
      - if can? :create, Award
        = link_to '추가하기', new_award_path

    %p= t('title.award_sub')


    %section
      .border.p-4
        .my-3
          %h6 어워드 목록
          = select_tag "award", options_for_select(Award.unscoped.order("title asc").map{|a| [a.title, award_path(a)]}), {include_blank: true, class: "form-control", onchange:"document.location.href=this.value"}

    .my-3
      = render @awards